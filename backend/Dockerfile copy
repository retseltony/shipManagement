# syntax=docker/dockerfile:1
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS base
ENV ASPNETCORE_URLS=https://+:5001;http://+:5000
WORKDIR /app
EXPOSE 5000
EXPOSE 5001

# Copy csproj and restore as distinct layers
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["backend/Ships.API/Ships.API.csproj", "Ships.API/"]
COPY ["backend/Ships.Application/Ships.Application.csproj", "Ships.Application/"]
COPY ["backend/Ships.Domain/Ships.Domain.csproj", "Ships.Domain/"]
COPY ["backend/Ships.Infrastructure/Ships.Infrastructure.csproj", "Ships.Infrastructure/"]
RUN dotnet restore "Ships.API/Ships.API.csproj"
COPY . .
WORKDIR "/src/Ships.API/."
RUN dotnet build "Ships.API.csproj" -c Release -o /app/build

# Copy everything else and build
FROM build AS publish
RUN dotnet publish "Ships.API.csproj" -c Release -o /app/publish

# Build runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Ships.API.dll"]